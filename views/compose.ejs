<%- include("partials/header"); -%>

<div class="container">
    <h1 class="text-bold">Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Title</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name="postTitle" aria-describedby="emailHelp" placeholder="Post Title">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Post</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="postBody" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
        </form>
</div>

